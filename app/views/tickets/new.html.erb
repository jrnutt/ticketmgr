<h1>Odd Job Computing Ticket Tracker</h1>
<h2>Create New Ticket</h2>

<%= form_for :ticket, url: tickets_path do |f| %>

<% if @ticket.errors.any? %>
<div id="error-explanation">
  <h2>
    <% pluralize(@ticket.errors.count,"error") %>
    prohibited this ticket from being saved
  </h2>
  <ul>
    <% @ticket.errors.full_messages.each do |errmsg| %>
    <li><%= errmsg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<p>
  <%= f.label :issue %><br>
  <%= f.text_field :issue %>
</p>

<p>
  <%= f.label :client_email %><br>
  <%= f.email_field :client_email %>
</p>

<p>
  <%= f.label :submit_date %><br>
  <%= f.date_field :submit_date %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
<p><%= link_to 'Ticket List', tickets_path %></p>
